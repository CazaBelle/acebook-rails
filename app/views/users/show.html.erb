</div>
<div id="lucida">
  <br>
  <h3> <%= link_to "New Post", new_user_post_url(@user)  %></h3>
  <h2> Posts </h2>
 <% @user.posts.reverse.each do |post| %>

     <h5><%= post.created_at.strftime("%H:%M:%S - %d/%m/%y")%></h5>
     <% sender = User.find_by_id(post.sender_id) %>
     <h4><%= sender.username %>:
       <a href="/posts/<%= post.id %>"><%=post.message%> </a></h4>
     <br>
   </div>
<% end %>


</div>

